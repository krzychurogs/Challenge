<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearquest"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >


    <TextView
        android:id="@+id/lvl"
        android:layout_width="match_parent"
        android:textSize="50dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:hint="Level" />

    <TextView
        android:id="@+id/textViewPkt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Twoje punkty:" />

    <TextView
        android:id="@+id/textViewPktLvl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Punkty do nastepnÄ™go lvl:"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/week"
        android:layout_width="match_parent"
        android:textSize="30dp"
        android:gravity="left"
        android:layout_marginTop="70dp"
        android:layout_height="wrap_content"
        android:hint="Tygodniowe:" />

    <LinearLayout
        android:id="@+id/linearforcheck"
        android:layout_width="386dp"
        android:layout_height="181dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">


        <LinearLayout
            android:id="@+id/linearforhorizonweek"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <TextView
                android:id="@+id/textViewDist"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="Twoje punkty:"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/checkweekDist"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="Twoje punkty:"
                android:textSize="24dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearforhorizonweek1"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <TextView
                android:id="@+id/textViewAvg"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="Twoje punkty:"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/checkweekavg"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="Twoje punkty:"
                android:textSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearforhorizonweek2"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <TextView
                android:id="@+id/textViewCount"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="Twoje punkty:"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/checkweekCount"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="Twoje punkty:"
                android:textSize="24dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/dayweek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="left"
        android:hint="Dzienne:"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/linearforavg"
        android:layout_width="398dp"
        android:layout_height="166dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:id="@+id/linearforhorizonday1"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <TextView
                android:id="@+id/textViewDayDist"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="Twoje punkty:"
                android:textSize="24dp" />
            <TextView
                android:id="@+id/checkdayDist"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
