<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearquest"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >


    <TextView
        android:id="@+id/lvl"
        android:layout_width="match_parent"
        android:textSize="50dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:hint="Level" />

    <TextView
        android:id="@+id/textViewPkt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Twoje punkty:" />

    <TextView
        android:id="@+id/textViewPktLvl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Punkty do nastepnÄ™go lvl:"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/week"
        android:layout_width="match_parent"
        android:textSize="30dp"
        android:gravity="left"
        android:layout_marginTop="70dp"
        android:layout_height="wrap_content"
        android:hint="Tygodniowe:" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearforcheck"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearforavg"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearforcount"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >
    </LinearLayout>
    <TextView
        android:id="@+id/day"
        android:layout_width="match_parent"
        android:textSize="30dp"
        android:gravity="left"
        android:layout_marginTop="70dp"
        android:layout_height="wrap_content"
        android:hint="Dzienne:" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearfordayavg"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearfordaydist"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >
    </LinearLayout>

</LinearLayout>