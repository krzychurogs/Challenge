<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".FragmentMyFriends">

    <EditText
        android:id="@+id/editsearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Szukaj" />

    <ListView
        android:id="@+id/sampleListView"
        android:layout_width="392dp"
        android:layout_height="313dp"
        android:layout_below="@id/editsearch"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#CCCCCC"
        android:dividerHeight="1dp"
        android:paddingLeft="2dp"></ListView>


    <EditText
        android:id="@+id/editsearchrequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sampleListView"
        android:text="Szukaj" />

    <ListView
        android:id="@+id/sampleListViewRequest"
        android:layout_width="280dp"
        android:layout_height="387dp"
        android:layout_below="@id/editsearchrequest"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#CCCCCC"
        android:dividerHeight="1dp"
        android:paddingLeft="2dp"></ListView>

</RelativeLayout>