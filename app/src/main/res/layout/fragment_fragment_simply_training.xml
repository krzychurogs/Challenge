<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">




    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:background="@drawable/dotted_border"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="180dp"
            android:hint="0:00"
            android:textSize="28dp"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/speedlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="231dp"
            android:hint="Predkość"
            android:textColor="#000000"
            android:textSize="15dp"


            />

        <Chronometer
            android:id="@+id/czas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="70dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/czaslabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="120dp"
            android:hint="Czas trwania:"
            android:textColor="#000000"
            android:textSize="20dp"


            /><![CDATA[
        />
        ]]>

        <TextView
            android:id="@+id/kalorie"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_marginLeft="292dp"
            android:layout_marginTop="180dp"
            android:hint="0"
            android:textSize="28dp"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/kalorielabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="230dp"
            android:hint="Kalorie"
            android:textColor="#000000"
            android:textSize="15dp"


            />

        <TextView
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="180dp"
            android:hint="0:00"
            android:textColor="#000000"
            android:textSize="28dp"
            android:textStyle="bold"


            />
        />

        <TextView
            android:id="@+id/dystanslabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="230dp"
            android:hint="Dystans"
            android:textColor="#000000"
            android:textSize="15dp"


            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map2"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="435dp"
            tools:context=".MainActivity" />

        <ImageButton
            android:id="@+id/stoptime"
            android:layout_width="60dp"
            android:layout_height="49dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="290dp"
            android:background="@drawable/btn_backgroundred"
            android:src="@drawable/ic_pause_circle_outline_black_50dp" />

        <ImageButton
            android:id="@+id/end"
            android:layout_width="60dp"
            android:layout_height="49dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="290dp"
            android:background="@drawable/btn_backgroundred"
            android:src="@drawable/ic_stop_black_50dp" />

        <ImageButton
            android:id="@+id/start"
            android:layout_width="60dp"
            android:layout_height="49dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="290dp"
            android:background="@drawable/btn_background"
            android:src="@drawable/ic_play_arrow_black_50dp" />


    </FrameLayout>




</LinearLayout>