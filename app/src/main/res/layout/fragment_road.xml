<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:map="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@android:color/holo_blue_dark"
android:orientation="vertical">



<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">




    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/dotted_border">

        <TextView
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="180dp"
            android:hint="0:00"
            android:textSize="35dp"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/speedlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="231dp"
            android:hint="Predkość"
            android:textColor="#000000"
            android:textSize="15dp"


            />

        <Chronometer
            android:id="@+id/czas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="70dp"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/czaslabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Czas trwania:"
            android:layout_marginTop="120dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginLeft="140dp"


            /><![CDATA[
        />


        ]]>

        <TextView
            android:id="@+id/kalorie"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="180dp"
            android:hint="0"
            android:textSize="35dp"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/kalorielabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="230dp"
            android:hint="Kalorie"
            android:textColor="#000000"
            android:textSize="15dp"


            />

        <TextView
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="180dp"
            android:hint="0:00"
            android:textColor="#000000"
            android:textSize="35dp"
            android:textStyle="bold"


            />
        />


        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:stretchColumns="0,1"
            android:id="@+id/main_table" android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="match_parent">




        </TableLayout>
        <TextView
            android:id="@+id/twojnick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15dp"
            android:text="Dystans"
            android:layout_marginTop="150dp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/twojfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15dp"
            android:text="Dystans"
            android:layout_marginTop="190dp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/twojdystans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Dystans"
            android:textColor="#000000"
            android:textSize="15dp"
            android:text="Dystans"
            android:layout_marginTop="120dp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/dystanslabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="230dp"
            android:hint="Dystans"
            android:textColor="#000000"
            android:textSize="15dp"


            />

        <ImageButton
            android:id="@+id/refreshbutton"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="270dp"
            android:background="@drawable/btn_backgroundred"
            android:src="@drawable/ic_refresh_black_48dp"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/refsortbutton"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="270dp"
            android:background="@drawable/btn_backgroundred"
            android:src="@drawable/ic_sort_black_48dp"
            android:visibility="invisible" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map2"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="631dp"
            tools:context=".MainActivity" />


        <ImageButton
            android:id="@+id/stoptime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pause_circle_outline_black_50dp"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/btn_backgroundred"/>

        <ImageButton
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="150dp"
            android:src="@drawable/ic_play_arrow_black_50dp" />
        <ImageButton
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_backgroundred"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_stop_black_50dp" />


    </FrameLayout>




</LinearLayout>